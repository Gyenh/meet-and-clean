<div class="navbar">
	<div class="navbarleft">
		<%= link_to root_path do %>
		   <%= image_tag "logo.svg", class: "logo" %>
		<% end %>
		<h1 class="baseline">LET'S CLEAN THE STREET</h1>
	</div>
	<div class="navbarright">
		<%= link_to 'Créer un évènement', new_event_path, class: "eventbleu"%>
		<div class="dropdown">
		  <% if admin_signed_in? %>
					<%= link_to('Logout', destroy_admin_session_path, method: :delete, class: "loginrose") %>
			<% elsif user_signed_in? %>
					<%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "loginrose" %>
			<% else %>
				<button class="dropbtn">Connexion</button>
				<div class="dropdown-content">
					<%= link_to 'User', new_user_session_path, class: "loginrose"%>
					<%= link_to 'Association', new_admin_session_path, class: "loginrose"%>
		  	</div>
			<% end %>
		</div>

		<div class="dropdown">
		  <button class="dropbtn">Inscription</button>
		  <div class="dropdown-content">
		    <%= link_to 'User', new_admin_registration_path, class: "loginrose"%>
		    <%= link_to 'Association', new_user_registration_path, class: "loginrose"%>
		  </div>
		</div>
	</div>
</div>
