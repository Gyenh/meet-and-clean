<div class="inscription">
  <% if user_signed_in? %>
    <%= render "admins/shared/error" %>
    <% else %>
    
    <div class="inscriptionassos">
      <h2>Inscription</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@super.com", class: "champsinfo" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
<!--         <em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "mot de passe", class: "champsinfo" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirmation", class: "champsinfo" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

<!-- pour le bouton connexion : -->
<!--     <%= render "admins/shared/links" %>
 -->  <% end %>
</div>