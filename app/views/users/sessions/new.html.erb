<div class="inscription">
  <% if admin_signed_in? %>
    <%= render "users/shared/error" %>
    <% else %>

    <div class="inscriptionuser">
      <%= link_to new_user_session_path, class: "connexionrose" do %>
        <h2 class="rose">Connexion</h2>
      <% end %>
      <%= link_to new_user_registration_path, class: "inscriptionnoir" do %>
        <h2>Inscription</h2>
      <% end %>      
     </div>
    <div class="champignon">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@super.com", class: "champsinfo" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "mot de passe", class: "champsinfo" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <h3>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </h3>
          <h3>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </h3>
        </div>
      <% end -%>
      <!-- bouton pour le sign in et forgot your password ? -->
      <div class="actions">
        <%= f.submit "ok", class: "pommeok" %>
      </div>
    <% end %>
  <% end %>
  </div>

</div>