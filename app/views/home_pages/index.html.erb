<% if admin_signed_in? %>
 <li>
 <%= link_to('Logout', destroy_admin_session_path, method: :delete) %>
 </li>
<% elsif user_signed_in? %>
 <li>
 <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
 </li>
 <% else %>
 <li>
 <%= link_to('MOB Access', new_admin_session_path) %>
 </li>
  <li>
 <%= link_to('User Access', new_user_session_path)  %>
 </li>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Place</th>
      <th>Description</th>
      <th>Date</th>
      <th>Association</th>
      <th>Hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.place %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.mob.name %></td>
        <td><%= event.hour %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Participer', user_events_path(event), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% elsif admin_signed_in? %>
    <%= link_to 'New Event', new_event_path %>
  <% else current_user == nil %>
    <p> Vous êtes un MOB ? Inscrivez vous par <%= link_to 'ici', new_admin_registration_path %> et proposez dès maintenant votre événement. </p>
<% end %>
