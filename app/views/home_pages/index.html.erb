<div class="carteevent">
  <table>
    <thead>
      <tr>
        <th><h2>NOM DE L'EVENT</h2></th>
        <th><h5>OCT</h5></th>
        <th><h6>17</h6></th>
        <th><h3>Place de Cambronne</h3></th>
        <th><h3>1 500 personnes intéressées</h3></th>
        <th><p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonumdolor in hendrerit in vulputate velit eseros et accumsan et iusto odio dignissim qui blandit praesent...</p></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.place %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= event.mob.name %></td>
          <td><%= event.hour %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= button_to 'Participer', user_events_path(event), method: :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div class="battery">
    <div class="inner"><h4>Intéressé(e)</h4></div>
    <div class="innerpre"></div>
    <div class="posi"></div>
    <div class="moins"></div>
    <div class="plus"></div>
  </div>

  <% if user_signed_in? %>
    <% elsif admin_signed_in? %>
      <%= link_to 'New Event', new_event_path %>
    <% else current_user == nil %>
  <!--       <p> Vous êtes un MOB ? Inscrivez vous par <%= link_to 'ici', new_admin_registration_path %> et proposez dès maintenant votre événement. </p> -->
  <% end %>
</div>