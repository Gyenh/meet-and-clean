

<p id="notice"><%= notice %></p>

<div class="wrappi">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-md-12">
      <div class="row">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Place</th>
              <th>Description</th>
              <th>Date</th>
              <th>Association</th>
              <th>Hour</th>
              <th colspan="3"></th>
            </tr>
          </thead>





    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.place %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= event.mob.name %></td>
          <td><%= event.hour %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= button_to 'Participer', user_events_path(event), method: :post, class: "eventbleu" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>