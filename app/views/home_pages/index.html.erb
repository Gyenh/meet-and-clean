<tbody>
  <% @events.each_with_index do |event, index| %>
    <div class="carteevent">
      <div class="hautcard">
        <div class="nameevent">
          <h2><%= event.name.upcase %></h2>
        </div>
        <div class="date">
          <h5><%= @array_date[index][0] %></h5>
          <h6><%= @array_date[index][1] %></h6>
        </div>
      </div>
      <div class="adressandnumber">
        <h3><%= event.place %></h3>
        <h3>1 500 personnes intéressées</h3>
      </div>
      <div class="infoevent">
        <p><%= event.description %></p>
      </div>
      <div class="batterygreen">
        <div class="inner"><h4><%= link_to 'Intéressé(e)', event %></h4></div>
        <div class="innerpre"></div>
        <div class="posi"></div>
        <div class="moins"></div>
        <div class="plus"></div>
      </div>
    </div>
  <% end %>
</tbody>


